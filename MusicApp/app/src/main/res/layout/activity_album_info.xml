<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_album_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#455A64"
    android:orientation="vertical"
    tools:context="com.example.nayantiwari.musicapp.AlbumActivity">

    <TextView
        style="@style/albumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:textAllCaps="true"
        android:layout_marginTop="16dp"
        tools:text="Current location"/>

    <ImageView
        android:id="@+id/album_art"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/album_name"
        style="@style/albumName"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="20sp"
        tools:text="Album 1" />

    <TextView
        android:id="@+id/artist_name"
        style="@style/albumName"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Name of the Artist" />


    <TextView
        android:id="@+id/song_numbers"
        style="@style/albumName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Number Of Songs" />

    <LinearLayout
        android:id="@+id/album_song_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/song_name"
            style="@style/albumInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="20sp"
            tools:text="List of songs" />

        <TextView
            android:id="@+id/duration"
            style="@style/albumInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="12sp"
            tools:text="duration" />
    </LinearLayout>

</LinearLayout>
